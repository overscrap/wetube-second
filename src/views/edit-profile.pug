extends partials/layout
block content
    img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar" name="avatar", accept="image/*") 
        input(type="text", name="userId" placeholder="UserId", required, value=`${loggedInUser.userId}` )
        input(type="email", name="email" placeholder="Email", required, value=`${loggedInUser.email}` )
        input(type="text", name="name" placeholder="Name", required, value=`${loggedInUser.name}` )
        input(type="text", name="location" placeholder="Location", required, value=`${loggedInUser.location}` )
        input(type="submit", value="Upload Profile")