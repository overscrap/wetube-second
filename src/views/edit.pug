extends partials/layout

block content
    h4 Update Story
    if(errorMessage)
        span=errorMessage
    form(method="POST")
        input(type="text", name="title", value=`${story.title}`, required)
        input(type="text", name="description", value=`${story.description}` , required )
        input(type="text", name="hashtags", value=`${story.hashtags.join()}` , required )
        input(type="submit", value="Edit" )