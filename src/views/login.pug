extends partials/layout

block content
    if(errorMessage)
        span=errorMessage
    form(method="post")
        input(type="text", name="userId", required="true", placeholder="UserId")
        input(type="text", name="password", required="true", placeholder="Password")
        input(type="submit", value="Login")
        include partials/social-login
    div.auth-switch
        span Don't have an account? 
        a(href="/join") Create one now &rarr;