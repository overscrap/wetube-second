extends partials/layout

block content
    div 
        video#preview
        button#startBtn Start Recording
    if(errorMessage)
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="story") Story File
        input(type="file", id="story", name="story", accept="video/*")
        input(type="text", name="title" placeholder="Title", required )
        input(type="text", name="description" placeholder="Description", required )
        input(type="text", name="hashtags" placeholder="Hashtags", required )
        input(type="submit", value="Upload Story")
        
block scripts 
    script(src="/static/js/recorder.js") 
